---
import { getLocale } from "@/paraglide/runtime";
import { content } from "./index.content";
const locale = getLocale();
---

<section
  id="contact"
  class="container xl:max-w-7xl pt-8 px-4 py-8 overflow-hidden flex flex-col items-center"
>
  <div class="w-full max-w-5xl mt-12">
    <h2
      class="text-4xl font-display font-bold uppercase tracking-wider text-[#ffb586]"
    >
      {content[locale].section_title}
    </h2>
    <div class="mt-8 space-y-4">
      <div class="w-full max-w-md card">
        <a
          class="flex justify-between p-4 w-full"
          href="https://www.linkedin.com/in/tbs2020/"
          target="_blank"
        >
          <div class="flex flex-col justify-between w-[90%]">
            <h5>LinkedIn :</h5>
            <span
              class="text-[#ffb586] hover:text-[#ff8a00] transition-colors duration-300 whitespace-nowrap text-ellipsis inline-block overflow-hidden"
            >
              https://www.linkedin.com/in/tbs2020/
            </span>
          </div>
          <div class="w-[10%] md:w-auto shrink-0">
            <img src="/resume/linkedin-logo.svg" alt="linkedin logo" />
          </div>
        </a>
      </div>
      <div class="w-full max-w-md card">
        <a
          class="flex justify-between p-4 w-full"
          href="https://github.com/tomas-benitez"
          target="_blank"
        >
          <div class="flex flex-col justify-between w-[90%]">
            <h5>Github :</h5>
            <span
              class="text-[#ffb586] hover:text-[#ff8a00] transition-colors duration-300 whitespace-nowrap text-ellipsis inline-block overflow-hidden"
            >
              https://github.com/tomas-benitez
            </span>
          </div>
          <div class="w-[10%] md:w-auto shrink-0">
            <img src="/resume/github-logo.svg" alt="github logo" />
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .card {
    @apply bg-slate-200/10 rounded-md cursor-pointer;
    box-shadow:
      0 10px 3px -3px rgb(0 0 0 / 0.1),
      0 4px 2px -4px rgb(0 0 0 / 0.1),
      0 0 10px 0 rgba(255, 255, 255, 0.2) inset;
    position: relative;
    transition: all 0.3s ease-in-out;
    overflow: hidden;
  }

  .card::before {
    content: "";
    position: absolute;
    opacity: 0.3;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(
        60deg,
        rgba(255, 255, 255, 0) 17%,
        rgba(106, 245, 255, 0.2),
        rgba(255, 255, 255, 0) 20%,
        rgba(255, 255, 255, 0) 50%,
        rgba(106, 245, 255, 0.2),
        rgba(255, 255, 255, 0) 85%
      ),
      linear-gradient(
        60deg,
        rgba(255, 255, 255, 0) 65%,
        rgba(106, 245, 255, 0.2),
        rgba(255, 255, 255, 0) 75%
      ),
      linear-gradient(
        60deg,
        rgba(255, 255, 255, 0) 10%,
        rgba(106, 245, 255, 0.2),
        rgba(255, 255, 255, 0) 28%,
        rgba(255, 255, 255, 0) 56%,
        rgba(106, 245, 255, 0.2),
        rgba(255, 255, 255, 0) 60%
      );
    transform: translateX(0);
    transition: all 0.5s ease-in-out;
    z-index: -1;
  }

  .card:hover {
    transform: scale(1.05);
    box-shadow:
      0 10px 6px -3px rgb(0 0 0 / 0.1),
      0 4px 4px -4px rgb(0 0 0 / 0.1),
      0 0 10px 0 rgba(255, 255, 255, 0.5) inset;
  }
  .card:hover::before {
    opacity: 0.7;
    transform: translateX(-10%);
  }
</style>
